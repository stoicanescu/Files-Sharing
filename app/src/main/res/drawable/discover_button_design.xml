        <shape
            android:shape="rectangle">
            <solid
                android:color="#01f1fa" />
            <corners
                android:bottomRightRadius="5dp"
                android:radius="20dp" />
            <gradient
                android:angle="45"
                android:endColor="#b079ff"
                android:startColor="#6b03ff"
                android:type="linear" />
        </shape>
    </item>
</ripple>